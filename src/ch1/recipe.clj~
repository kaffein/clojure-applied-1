(ns ch1.recipe)

(defrecord Recipe
    [name
     author
     description
     ingredients
     steps
     servings
     ])

(defrecord Person
    [fname
     lname
     ])

(def toast
  (->Recipe
   "Toast"
   (->Persion "Alex" "Miller")
   "Crispy bread"
   ["Slice of bread"]
   ["Toast bread in toaster"
    1]))
