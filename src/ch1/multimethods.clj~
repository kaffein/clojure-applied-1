(ns ch1.multimethods
  (:require [ch1.recipe :as rec]))

(defrecord Store [,,,,])

(defn cost-of [store ingredient] ,,,,)

(defmulti cost (fn [entity store] (class entity)))

(defmethod cost rec/Recipe [recipe store]
  (reduce +$ zero-dollars
          (map #(cost % store) (:ingredients recipe))))

(defmethod cost rec/Ingredient [ingredient store]
  (cost-of store ingredient))
